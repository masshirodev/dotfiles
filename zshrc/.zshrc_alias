# Commons
alias zshrc="lvim $v_zshrc"
alias rc="lvim $v_zshrc"
alias hyde="lvim $v_hyde"
alias refreshenv="clear && source $v_zshrc_base && hyprctl reload >/dev/null"
alias ls='eza --icons -l -s type --color always --all'
alias ~="cd ~"
alias rcp="rsync --progress"
alias rmv="rsync --progress --remove-source-files"
alias cat="bat"
alias space="df -h"
alias copy='xclip -selection clipboard <'
alias mergejson="$v_scripts/merge-json.py"
alias git-init="$v_scripts/git-init.sh"
alias to-claude="$v_scripts/to-claude.py"
alias file-split="$v_scripts/file-split.py"
alias ttv="$v_scripts/toggle-tv.sh"
alias check_install="$v_scripts/check-install.sh"
alias code="code" # reset now that we arent using flatpak

# Directories
alias desktop="cd $v_desktop"
alias downloads="cd $v_downloads"
alias documents="cd $v_documents"
alias lunarvim="cd $v_lunarvim"
alias lunarconfig="cd $v_lunarconfig"
alias projects="cd $v_projects"
alias ssd="cd $v_ssd"
alias hdd="cd $v_hdd"
alias backup="cd $v_backup"
alias wdocuments="cd $v_wdocuments"
alias wdownloads="cd $v_wdownloads"
alias wprojects="cd $v_wprojects"
alias discordbot="cd $v_discordbot"
alias anime="cd $v_anime"
alias movies="cd $v_movies"
alias cs2="lvim '$v_cs2'"
alias farmer="cd $v_farmer"
alias myconf="cd $v_zshrc"

# Files
alias fstab="sudo vim $v_fstab"

# Random
alias v8gen="$HOME/projects/v8/tools/dev/v8gen.py"
alias restart-audio="systemctl --user reload-or-restart wireplumber"
alias anime="anipy-cli"
alias anilist="anipy-cli -A"
alias anidl="anipy-cli -D"
alias rename-sequence="$HOME/.config/myconf/scripts/rename_sequence.py"
alias rename-jellyfin="$HOME/.config/myconf/scripts/rename_jellyfin.py"
alias restart-noctalia="systemctl --user restart noctalia.service"

# AI
alias ai-on='sudo systemctl start ollama && echo "Ollama started"'
alias ai-off='sudo systemctl stop ollama && echo "Ollama stopped"'
alias ai-chat14='ollama run deepseek-r1:14b'
alias ai-chat32='ollama run deepseek-r1:32b'
